#pragma once

#include <bit>

#include <!cpp/common.h>

namespace std {
	#ifndef __cpp_lib_endian 
	#define __cpp_lib_endian
	namespace endian {
		enum {
			#ifdef _WIN32
				little = 0,
				big    = 1,
				native = little
			#else
				little = __ORDER_LITTLE_ENDIAN__,
				big    = __ORDER_BIG_ENDIAN__,
				native = __BYTE_ORDER__
			#endif
		};
	}
	#endif
} //# namespace
